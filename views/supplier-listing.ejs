<div class="normalheader transition animated fadeIn">
  <div class="hpanel">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <h2 class="font-light m-b-xs">
            Supplier List
          </h2>
          <div id="hbreadcrumb">
            <ol class="hbreadcrumb breadcrumb">
              <li><a title="Dashboard" href="<%= sails.config.base_url %>dashboard">Dashboard</a></li>
              <li class="active">
                <span>Supplier List</span>
              </li>
            </ol>
          </div>
        </div>
        <div class="col-md-6 text-right m-t-sm">
          <a class="btn btn-primary" href="<%= sails.config.base_url %>supplier/add">Add Supplier</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="content">
  <% if (req.session.flash) { %>
  <%- req.flash('flashMessage') %>
  <% } %>
  <% if(!Object.keys(suppliers).length){ %>
  <div class="row">
    <div class="col-lg-12">
      <div class="hpanel">
        <div class="panel-body">
          <span class="">There has no supplier available</span>
        </div>
      </div>
    </div>
  </div>
  <% }else{ %>
  <div class="row">
    <div class="col-lg-4 pull-right">
      <div class="hpanel">
        <div class="m-t-sm">
          <div class="input-group">
            <input class="form-control search" type="text" name="search" placeholder="Search Supplier...">
            <div class="input-group-btn">
              <button class="btn btn-default search-supplier"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row supplier-block">
    <%- partial('show-supplier.ejs') %>
  </div>
  <% } %>
  <% if(count > sails.config.per_page_data){ %>
  <div class="col-md-12 border-right">
    <div class="pagination">
      <input type="hidden" id="offset" value="<%= sails.config.per_page_data%>">
      <input type="hidden" id="limit" value="<%= sails.config.per_page_data%>">
      <input type="hidden" id="count" value="<%= count %>">
      <p class="seeMoreFollowList">
        <a class="load_more_preferences c1" href="javascript:void(0);" onclick="showMyTrips()">Show More</a>
      </p>
      <div align="center">
        <img name="smallGlobalLoader" id="smallGlobalLoader" title="Loading" style="display:none; max-width:100px; max-height:100px;" src="/images/loadingBar.gif">
      </div>
    </div>
  </div>
  <% } %>
</div>
