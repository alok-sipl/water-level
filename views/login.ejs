<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <div class="site-logo">
          <img src="<%= sails.config.base_url %>images/logo.png" title="<%= sails.config.app_name %>" alt="<%= sails.config.app_name %>">
        </div>
        <h3>Administrator Login</h3>
        <small>This is the best app ever!</small>
      </div>
      <div class="hpanel">
        <div class="panel-body">
          <form method="post" action="<%= sails.config.base_url %>login" data-parsley-validate novalidate="" name="loginForm" id="loginForm">
            <% if (req.session.flash) { %>
              <%- req.flash('flashMessage') %>
            <% } %>
            <div class="form-group <%= (errors.email != undefined) ? " has-error" : "" %>">
              <label class="control-label" for="email">Email</label>
              <input type="email" name="email" class="form-control" id="email"
                     required
                     maxlength="<%= sails.config.length.email %>"
                     data-parsley-type="email"
                     data-parsley-required-message="<%= User.message.email_required %>"
                     data-parsley-maxlength-message="<%= User.message.email_maxlength %>"
                     data-parsley-type="email" value=""
                     placeholder="Email"/>
              <span class="help-block">
                <strong><%= (errors.email != undefined) ? errors.email.message : '' %>
                </strong>
              </span>
            </div>
            <div class="form-group <%= (errors.password != undefined) ? " has-error" : "" %>">
              <label class="control-label" for="password">Password</label>
              <input type="password" name="password" class="form-control" id="password"
                     required
                     minlength="<%= sails.config.length.min_password %>"
                     maxlength="<%= sails.config.length.max_password %>"
                     data-parsley-required-message="<%= User.message.password_required %>"
                     data-parsley-minlength-message="<%= User.message.password_minlength %>"
                     data-parsley-maxlength-message="<%= User.message.password_maxlength %>"
                     placeholder="Password"/>
              <span class="help-block">
                <strong><%= (errors.password != undefined) ? errors.password.message : '' %>
                </strong>
              </span>
            </div>
            <button class="btn btn-default btn-block" title="Login"><span>Login</span></button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
