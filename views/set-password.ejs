<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <div class="site-logo">
          <img src="<%= sails.config.base_url %>images/logo.png" title="<%= sails.config.app_name %>" alt="<%= sails.config.app_name %>">
        </div>
        <h3>Administrator Set Password</h3>
      </div>
      <div class="hpanel">
        <% if (req.session.flash) { %>
        <%- req.flash('flashMessage') %>
        <% } %>
        <div class="panel-body">
          <form method="post" action="<%= sails.config.base_url %>login/confirmPassword/<%= id%>" data-parsley-validate novalidate="" autocomplete="off" name="loginForm" id="loginForm" class="form-submit">
            <div class="form-group <%= (errors.password != undefined) ? " has-error" : "" %>">
              <label class="control-label" for="email">Password*</label>
              <input type="password" name="password" class="form-control" id="password"
                     value=""
                     maxlength="<%= sails.config.length.max_password %>"
                     required
                     data-parsley-length="[<%= sails.config.length.min_password %>, <%= sails.config.length.max_password %>]"
                     data-parsley-required-message="<%= User.message.password_required %>"
                     data-parsley-length-message="<%= User.message.password_length %>"
                     placeholder="Password"/>
              <span class="help-block">
                <strong><%= (errors.password != undefined) ? errors.password.message : '' %>
                </strong>
              </span>
            </div>

            <div class="form-group <%= (errors.confirm_password != undefined) ? " has-error" : "" %>">
              <label class="control-label" for="confirm_password">Confirm Password*</label>
              <input type="password" name="confirm_password" class="form-control" id="confirm_password"
                     value=""
                     maxlength="<%= sails.config.length.max_password %>"
                     required
                     data-parsley-length="[<%= sails.config.length.min_password %>, <%= sails.config.length.max_password %>]"
                     data-parsley-required-message="<%= User.message.confirm_password_required %>"
                     data-parsley-length-message="<%= User.message.confirm_password_length %>"
                     placeholder="Confirm Password"/>
              <span class="help-block">
                <strong><%= (errors.confirm_password != undefined) ? errors.confirm_password.message : '' %>
                </strong>
              </span>
            </div>
            <button class="btn btn btn-primary btn-block admin-login-btn" title="Set password"><span>Set Password</span></button>
            <span class="forgot"><a href="<%= sails.config.base_url %>login" title="Login">Login</a></span>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
