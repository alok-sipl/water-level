<div class="normalheader transition animated fadeIn">
  <div class="hpanel">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <h2 class="font-light m-b-xs">
           View Contact Enquiry
          </h2>
          <div id="hbreadcrumb">
            <ol class="hbreadcrumb breadcrumb">
              <li><a href="<%= sails.config.base_url %>dashboard">Dashboard</a></li>
              <li class="active">View Contact Enquiry</li>
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="hpanel">
      <div class="panel-body">
        <form action="<%= sails.config.base_url %>contact" method="post"
              id="contact" class='form-horizontal' data-parsley-validate='true'>
          <% if (req.session.flash) { %>
          <%- req.flash('flashMessage') %>
          <% } %>
          <div class="form-group <%= (errors.name != undefined) ? " has-error" : "" %>">
            <label for="name" class="col-md-4 control-label">Name</label>
            <div class="col-md-6">
              <% if(isEdit){ %>
              <input type="text" name="name" class="form-control" id="name"
                     value="<%= (contact.name != undefined) ? contact.name : "" %>"
                     required
                     maxlength="<%= sails.config.length.name %>"
                     data-parsley-required-message="<%= User.message.name_required %>"
                     data-parsley-maxlength-message="<%= User.message.name_maxlength %>"
                     pattern="<%= sails.config.regex.name %>"
                     data-parsley-pattern-message="<%= User.message.name_pattern %>"
                     placeholder="Name"/>
              <span class="help-block">
                <strong><%= (errors.name != undefined) ? errors.name.message : '' %>
                </strong>
              </span>
              <% }else{ %>
              <span class=""><%= (contact.name != undefined) ? contact.name : "" %></span>
              <% } %>
            </div>
          </div>
          <div class="form-group">
            <label for="email" class="col-md-4 control-label">Email</label>
            <div class="col-md-6">
              <% if(isEdit){%>
              <input type="email" name="email" class="form-control" id="email"
                     value="<%= contact.message %>"
                     disabled
                     placeholder="Email"/>
              <% }else{ %>
              <span class=""><%= (contact.email != undefined) ? contact.email : "" %></span>
              <% } %>
            </div>
          </div>
          <div class="form-group">
            <label for="query" class="col-md-4 control-label">Message</label>
            <div class="col-md-6">
              <% if(isEdit){%>
              <input type="text" name="query" class="form-control" id="query"
                     value="<%= contact.message %>"
                     disabled
                     placeholder="Query"/>
              <% }else{ %>
              <span class=""><%= (contact.query != undefined) ? contact.query : "" %></span>
              <% } %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <% if(isEdit){%>
              <button type="submit" class="btn btn-primary">
                Update Profile
              </button>
              <a class="btn btn-primary" href="<%= sails.config.base_url %>dashboard">Cancel</a>
              <% }else{ %>
              <a class="btn btn-primary" href="<%= sails.config.base_url %>contact">Back</a>
              <% } %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
