<div class="normalheader transition animated fadeIn">
  <div class="hpanel">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <h2 class="font-light m-b-xs">
            <%= (type) ? 'Add City' : 'Add Location' %>
          </h2>
          <div id="hbreadcrumb">
            <ol class="hbreadcrumb breadcrumb">
              <li><a href="<%= sails.config.base_url %>supplier">Dashboard</a></li>
              <li><a href="<%= sails.config.base_url %>city">City List</a></li>
              <li class="active">
                <%= (type) ? 'Add City' : 'Add Location' %>
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="hpanel">
      <div class="panel-body">
        <% if(type == true){ %>
        <form action="<%= sails.config.base_url %>city/addCity" method="post"
              id="add-city" class='form-horizontal' data-parsley-validate='true'>
        <% }else{ %>
          <form action="<%= sails.config.base_url %>city/addLocation" method="post"
                id="add-location" class='form-horizontal' data-parsley-validate='true'>
        <%}%>
          <div class="form-group">
            <label for="first_name" class="col-md-4 control-label">Country*</label>
            <div class="col-md-6">
              <select name="country" id="country" class="form-control" required
                      data-parsley-required-message="<%= City.message.country_required %>">
                <option value="">Select Country</option>
                <% if(country != undefined && Object.keys(country).length){ %>
                  <% if(!type){ %>
                      <% for(var key in country) { %>
                        <% if(key == cities.country_id){ %>
                          <option <%= (!type) ? ((countryId == key) ?  'selected': '' ) :''%> value="<%= key %>"><%= country[key].name %></option>
                        <% } %>

                      <%  } %>
                  <% }else{ %>
                      <% for(var key in country) { %>
                        <option <%= (!type) ? ((countryId == key) ?  'selected': '' ) :''%> value="<%= key %>"><%= country[key].name %></option>
                      <% } %>
                  <% }
                } %>
              </select>
            </div>
          </div>
          <% if(type == true){ %>
          <div class="form-group">
            <label for="is_active" class="col-md-4 control-label">City*</label>
            <div class="col-md-6">
              <input type="text" name="city" id="city" class="form-control" required
                     data-parsley-required-message="<%= City.message.city_required %>"
                     data-parsley-maxlength-message="<%= City.message.city_maxlength %>"
                     placeholder="City"/>
            </div>
          </div>
          <% }else{ %>
          <div class="form-group">
            <label for="is_active" class="col-md-4 control-label">City*</label>
            <div class="col-md-6">
              <select name="city" id="city" class="form-control" required
                      data-parsley-required-message="<%= City.message.city_required %>">
                <option value="">Select City</option>
                <%
                if(cities != undefined && Object.keys(cities).length){ %>
                <option selected  value="<%= cityId %>"><%= cities.name %></option>
                <%
                } %>
              </select>
            </div>
          </div>
          <% } %>
          <input type="hidden" name="type" value="<%= type %>"/>
          <% if(!type){ %>
          <div class="form-group">
            <label for="is_active" class="col-md-4 control-label">Location*</label>
            <div class="col-md-6">
              <input type="text" name="area" class="form-control" required id="area" value=""
                     data-parsley-required-message="<%= City.message.area_required %>"
                     data-parsley-maxlength-message="<%= City.message.area_maxlength %>"
                     placeholder="Location"/>
            </div>
          </div>
          <% } %>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <button type="submit" class="btn btn-primary">
                <%= (type) ? 'Save City' : 'Add Location' %>
              </button>
              <a class="btn btn-primary" href="<%= sails.config.base_url %>city">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
