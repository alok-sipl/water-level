<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <div class="site-logo">
          <img src="<%= sails.config.base_url %>images/logo.png" title="<%= sails.config.app_name %>" alt="<%= sails.config.app_name %>">
        </div>
        <h3>Forgot Password</h3>
      </div>
      <div class="hpanel">
        <% if (req.session.flash) { %>
        <%- req.flash('flashMessage') %>
        <% } %>
        <div class="panel-body">
          <form method="post" action="<%= sails.config.base_url %>login/forgotPassword"  autocomplete="off" data-parsley-validate novalidate="" name="loginForm" id="loginForm" class="form-submit">
            <div class="form-group <%= (errors.email != undefined) ? " has-error" : "" %>">
              <label class="control-label" for="email">Email*</label>
              <input type="email" name="email" class="form-control" id="email"
                     required
                     maxlength="<%= sails.config.length.email %>"
                     data-parsley-type="email"
                     data-parsley-required-message="<%= User.message.email_required %>"
                     data-parsley-maxlength-message="<%= User.message.email_maxlength %>"
                     data-parsley-type="email" value=""
                     placeholder="Email"/>
              <span class="help-block">
                <strong><%= (errors.email != undefined) ? errors.email.message : '' %>
                </strong>
              </span>
            </div>
            <button class="btn btn btn-primary btn-block admin-login-btn" title="Send"><span>Send</span></button>
            <div class="forgot text-center m-t-sm">
              <a href="<%= sails.config.base_url %>login" title="Login">Login</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
