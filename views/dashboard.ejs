<div class="normalheader transition animated fadeIn">
  <div class="hpanel">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <h2 class="font-light m-b-xs">Dashboard</h2>
          <div id="hbreadcrumb">
            <ol class="hbreadcrumb breadcrumb">
              <li class="active"> Dashboard
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
<% if (req.session.flash) { %>
    <%- req.flash('flashMessage') %>
    <% } %>
  <div class="col-lg-4">
    <div class="hpanel">
      <div class="panel-body h-200">
        <div class="stats-title pull-left">
          <h4>Number of Register Users</h4>
        </div>
        <div class="stats-icon pull-right">
          <i class="fa fa-users fa-3x"></i>
        </div>
        <div class="clearfix"></div>
        <div class="text-center">
          <h1 class="m-xs text-success"><%= totalUser %></h1>
        </div>
      </div>
      <div class="panel-footer text-center">
        <a href="<%= sails.config.base_url %>user" title="View">View</a>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="hpanel">
      <div class="panel-body h-200">
        <div class="stats-title pull-left">
          <h4>Number of Active Users</h4>
        </div>
        <div class="stats-icon pull-right">
          <i class="fa fa-users fa-3x"></i>
        </div>
        <div class="clearfix"></div>
        <div class="text-center">
          <h1 class="m-xs text-success"><%= activeUser %></h1>
        </div>
      </div>
      <div class="panel-footer text-center">
        <a href="<%= sails.config.base_url %>user" title="View">View</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-4">
    <div class="hpanel">
      <div class="panel-body h-200">
        <div class="stats-title pull-left">
          <h4>Total Number of Added Devices</h4>
        </div>
        <div class="stats-icon pull-right">
          <i class="fa fa-hourglass-2 fa-3x"></i>
        </div>
        <div class="clearfix"></div>
        <div class="text-center">
          <h1 class="m-xs text-success"><%= totalDevice %></h1>
        </div>
      </div>
      <div class="panel-footer text-center">
        <a href="<%= sails.config.base_url %>device" title="View">View</a>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="hpanel">
      <div class="panel-body h-200">
        <div class="stats-title pull-left">
          <h4>Total Number of User Registered Device</h4>
        </div>
        <div class="stats-icon pull-right">
          <i class="fa fa-hourglass-2 fa-3x"></i>
        </div>
        <div class="clearfix"></div>
        <div class="text-center">
          <h1 class="m-xs text-success"><%= activeDevice %></h1>
        </div>
      </div>
      <div class="panel-footer text-center">
        <a href="<%= sails.config.base_url %>device" title="View">View</a>
      </div>
    </div>
  </div>
</div>
