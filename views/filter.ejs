<div class="normalheader transition animated fadeIn">
  <div class="hpanel">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <h3 class="font-light m-b-xs">
            Supplier List
          </h3>
          <div id="hbreadcrumb">
            <ol class="hbreadcrumb breadcrumb">
              <li><a title="Dashboard" href="<%= sails.config.base_url %>supplier">Dashboard</a></li>
              <li class="active">
                <span>Supplier List</span>
              </li>
            </ol>
          </div>
        </div>
        <div class="col-md-6 text-right m-t-sm">
          <a class="btn btn-primary" href="<%= sails.config.base_url %>supplier/add">Add Supplier</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="hpanel">
      <div class="panel-body">
        <span class="">There has no supplier available</span>
      </div>
    </div>
  </div>
</div>
<div class="alert alert-success" style="display: none"></div>
<div class="alert alert-danger" style="display: none"></div>
<div class="row">
  <div class="col-lg-3">
    <div class="hpanel">
      <div class="m-t-sm">
        <div class="input-group">
          <input type="text" class="form-control" id="searchbox" placeholder="Search &hellip;">
          <div class="input-group-btn">
            <button class="btn btn-default search-supplier"><i class="fa fa-search"></i></button>
            <button style="display: none" class="btn btn-default clr-search-supplier"><i class="pe-7s-close-circle"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="col-md-9">
    <div class="movies content row" id="movies"></div>
  </div>
</div>
<script id="movie-template" type="text/html">
<div class="row supplier-block">
  <div class="col-md-3">
    <div class="hpanel hgreen contact-panel">
      <div class="panel-body">
        <span class="img-circle m-b">
          <img alt="<-%= company_name %->"
               src="https://water-level.herokuapp.com/images/logo.png">
       </span>
        <h3><-%= company_name %-></h3>

        <div
          class="text-muted font-bold m-b-sm"><-%= name %-></div>

        <p class="icon-text">
          <i class="fa fa-location-arrow"></i>
          <-%= city_name %->
        </p>

        <p class="icon-text">
          <i class="fa fa-phone"></i>
          <-%= mobile_number %-></p>
        <p class="icon-text">
          <i class="fa fa-envelope"></i>
          <-%= email %-></p>
      </div>
      <div class="panel-footer contact-footer clearfix">
        <a href="<%= sails.config.base_url %>supplier/edit/<-%= id %->" class="btn btn-primary col-md-12"
           title="Edit Supplier">Edit Supplier</a>
      </div>
    </div>
  </div>
</div>
</script>
